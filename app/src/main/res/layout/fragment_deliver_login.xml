<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.deliver.DeliverLoginFragment">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="@string/title_courier_login"
        android:textColor="@color/colorInfo"
        android:textSize="@dimen/title_text_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_go_back"
        android:layout_width="66dp"
        android:layout_height="66dp"
        android:layout_marginStart="43dp"
        android:layout_marginTop="51dp"
        android:background="@drawable/button_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <com.hzdongcheng.parcellocker.utils.RichEditText
        android:id="@+id/et_courier_id"
        android:layout_width="@dimen/edit_text_width"
        android:layout_height="@dimen/edit_text_hegiht"
        android:layout_marginTop="254dp"
        android:background="@drawable/edit_text_bg"
        android:focusable="true"
        android:hint="@string/hint_courier_id"
        android:inputType="text"
        android:textSize="@dimen/input_text_size"
        android:maxLength="24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:next="@+id/et_keyboard" />

    <com.hzdongcheng.parcellocker.utils.RichEditText
        android:id="@+id/et_courier_pwd"
        android:layout_width="@dimen/edit_text_width"
        android:layout_height="@dimen/edit_text_hegiht"
        android:background="@drawable/edit_text_bg"
        android:hint="@string/hint_courier_pwd"
        android:inputType="textPassword"
        android:textSize="@dimen/input_text_size"
        android:maxLength="6"
        android:layout_marginTop="62dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_courier_id"
        app:next="@+id/et_keyboard" />

    <TextView
        android:id="@+id/tv_tips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        android:textSize="@dimen/prompt_info_size"
        android:textColor="@color/colorError"
        app:layout_constraintBottom_toTopOf="@+id/btn_login"
        app:layout_constraintEnd_toEndOf="@+id/btn_login"
        app:layout_constraintStart_toStartOf="@+id/btn_login" />

    <Button
        android:id="@+id/btn_login"
        android:layout_width="@dimen/edit_text_width"
        android:layout_height="67dp"
        android:layout_marginTop="72dp"
        android:background="@drawable/button_positive_bg"
        android:text="@string/prompt_sure"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/input_text_size"
        app:layout_constraintStart_toStartOf="@+id/et_courier_pwd"
        app:layout_constraintTop_toBottomOf="@+id/et_courier_pwd" />


</android.support.constraint.ConstraintLayout>