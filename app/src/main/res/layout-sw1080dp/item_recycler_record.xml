<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cardview"
    app:cardCornerRadius="20dp"
    app:cardUseCompatPadding="false"
    android:background="@color/colorWhite"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

        <ImageView
            android:layout_width="293dp"
            android:layout_height="293dp"
            android:background="@drawable/image_cardview_bg"/>

    <android.support.constraint.ConstraintLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="27dp"
            android:layout_marginLeft="14dp"
            android:text="@string/prompt_courier_time"
            android:textColor="@color/colorInfo"
            android:textSize="@dimen/prompt_info_size"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="75dp"
            android:layout_marginLeft="14dp"
            android:text="@string/prompt_courier_customer"
            android:textColor="@color/colorInfo"
            android:textSize="@dimen/prompt_info_size"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="123dp"
            android:layout_marginLeft="14dp"
            android:text="@string/prompt_courier_package_no"
            android:textColor="@color/colorInfo"
            android:textSize="@dimen/prompt_info_size"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="214dp"
            android:layout_marginLeft="14dp"
            android:text="@string/prompt_courier_package_status"
            android:textColor="@color/colorInfo"
            android:textSize="@dimen/input_text_size"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_stored_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="27dp"
            android:layout_marginLeft="135dp"
            android:textColor="@color/colorInfo"
            android:textSize="@dimen/prompt_info_size"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_customer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="75dp"
            android:layout_marginLeft="135dp"
            android:textColor="@color/colorInfo"
            android:text="18072769110"
            android:textSize="@dimen/prompt_info_size"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_package_no"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="123dp"
            android:layout_marginLeft="135dp"
            android:textColor="@color/colorInfo"
            android:textSize="@dimen/prompt_info_size"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_package_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="214dp"
            android:layout_marginLeft="130dp"
            android:textColor="@color/havePackageStatusColor"
            android:textSize="@dimen/input_text_size"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>
