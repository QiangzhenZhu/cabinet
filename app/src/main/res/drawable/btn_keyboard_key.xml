<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <layer-list>
            <item android:bottom="2dp" android:right="2dp"  android:top="0dp" android:left="0dp">
                <shape>
                    <corners android:radius="15dp" />
                    <stroke android:width="2dp" android:color="@color/boxControl"  />
                    <solid android:color="#00000000" />
                </shape>
            </item>
            <item >
                <shape>
                    <corners android:radius="15dp" />
                    <stroke android:width="2dp" android:color="@color/colorInfo" />
                    <solid android:color="#00000000" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_pressed="true">
        <shape>
            <corners android:radius="15dp" />
            <stroke android:width="4dp" android:color="@color/colorFocused" />
            <solid android:color="@color/colorWhite" />
        </shape>
    </item>
</selector>

